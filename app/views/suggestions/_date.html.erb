<% if suggestion.start_date != nil && suggestion.end_date != nil%>
  <div>
    <i class="fas fa-times-circle delete-sugg"></i>
    <%= link_to "Supprimer",
    survey_suggestion_path(suggestion.survey.id, suggestion),
    class: '',
    method: :delete,
    data: { confirm: "Are you sure?" } %>
    <span><%= suggestion.start_date.day %>-<%= suggestion.start_date.month %>-<%= suggestion.start_date.year %></span>
    <span> | </span>
    <span><%= suggestion.end_date.day %>-<%= suggestion.end_date.month %>-<%= suggestion.end_date.year %></span>
  </div>
<% end %>
