function add(newSugg, where, addHTML) {
  const sugg = document.getElementById(newSugg);
  sugg.insertAdjacentHTML(where, addHTML);
}

function changeNb(id, Nb) {
  const nb = document.getElementById(id);
  nb.innerHTML = Nb;
}

// FUNCTION REFRESH
function refresh(id, text) {
  document.getElementById(id).value = text;
}

// REFRESH SUR DATE DE DEBUT ET DATE DE FIN
if (document.getElementById("suggestion_start_date")) {
  refresh("suggestion_start_date", '');
  refresh("suggestion_end_date", '');
}

// REFRESH SUR DESTINATION
if (document.getElementById("suggestion_value")) {
  refresh("suggestion_value", '');
}

