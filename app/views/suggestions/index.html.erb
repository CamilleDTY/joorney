<div class="container">
  <h3> Sondage : <%= @event.name %> </h3>
  <p> A vos votes ! Pour organiser un séjour au top, j'ai besoin de votre avis ! </p>

  <div id="suggestions-disponibility">
    <h4>Disponibilités</h4>
    <div id="suggestions-dates">
      <% simple_form_for [@suggestion, @choice] do |f| %>
        <% @suggestions_dates.each do |suggestion| %>
          <div class="suggestions-dates-choice">
            <%= f.input <%= suggestion.start_date.strftime("%d/%m/%Y")%> - <%= suggestion.end_date.strftime("%d/%m/%Y")%> %>
          </div>
        <%end%>
      <%end%>
    </div>
  </div>

  <div id="suggestions-budget">
    <h4>Budget max/pers</h4>
  </div>

  <div id="suggestions-destination">
    <h4>Destination</h4>
    <div id="suggestions-destinations">
      <% simple_form_for [@suggestion, @choice] do |f| %>
        <% @suggestions_destination.each do |suggestion| %>
          <div class="suggestions-dates-choice">
            <h5><%= suggestion.value %> <h5>
          </div>
        <%end%>
      <%end%>
    </div>
  </div>

  <div id="suggestions-thématiques">
    <h4>Thématiques</h4>

  </div>
</div>
